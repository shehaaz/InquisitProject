*****************************************************************************************************************
*****************************************************************************************************************
	Experiment Elements
*****************************************************************************************************************
*****************************************************************************************************************
<expt S2>
/ preinstructions = (introTOLFR)
/ skip = [trial.Language.response != "French"]
/ blocks = [1=practiceTOLFR; 2=testTOLFR]
</expt>

*****************************************************************************************************************
*****************************************************************************************************************
	Block Elements
*****************************************************************************************************************
*****************************************************************************************************************
<block practiceTOLFR>
/ preinstructions = (practiceTOLFR)
/ onblockend = [values.stopblock=0]
/ stop = [values.stopblock==1]
/ trials = [1=newround]
</block>

<block testTOLFR>
/ preinstructions = (testTOLFR)
/ onblockbegin = [values.totalscoreTOL=0]
/ stop = [values.stopblock==1]
/ trials = [1=newround]
</block>

